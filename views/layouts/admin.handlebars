<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{title}}</title>
    <meta name="description" content="{{content}}">

    <link rel="icon" type="image/png" href="/images/favicon.png" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin.css">

</head>

<body>

    {{> admin/display_admin }}

    {{> admin/menu_admin }}

    {{> admin/admin_mobile }}

    {{> admin/modal/modal_admin }}

    <!-- js icons -->
    <script src="/vendor/icons/9d1d83a1dd.js"></script>

    <!-- Bootstrap JS -->
    <script src="/vendor/jquery/jquery-3.5.1.slim.min.js"></script>
    <script src="/vendor/bootstrap/js/popper.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Js perso -->
    <script src="/admin/js/index.js"></script>
    <script src="/admin/js/add.js"></script>
    <script src="/admin/js/edit_delete.js"></script>

    <script>

    // Permet de voir le membre dans le modal -->
    {{#each membres}}

            $('#editMembre-' + '{{_id}}').click(function() {
            
                ViewMembre('{{_id}}', '{{lastname}}', '{{firstname}}', '{{email}}', '{{isBanned}}', '{{isAdmin}}');

            });

            $('#deleteMembre-' + '{{_id}}').click(function() {

                DeleteMembre('{{_id}}', '{{lastname}}', '{{firstname}}');

            });

    {{/each}}

    // Permet de voir l'article dans le modal  -->
    {{#each articles}}

            $('#editArticle-' + '{{_id}}').click(function() {
            
                ViewArticle('{{_id}}', '{{image}}', '{{title}}', '{{content}}', '{{isPrivate}}');

            });

            $('#deleteArticle-' + '{{_id}}').click(function() {

               DeleteArticle('{{_id}}', '{{title}}');

            });

    {{/each}}

    // Permet de voir le projet dans le modal  -->
    {{#each projets}}

            $('#editProjet-' + '{{_id}}').click(function() {
            
                ViewProjet('{{_id}}', '{{image}}', '{{title}}', '{{content}}', '{{date}}', '{{isPrivate}}');

            });

            $('#deleteProjet-' + '{{_id}}').click(function() {

               DeleteProjet('{{_id}}', '{{title}}');

            });

    {{/each}}

    {{#each tutos}}

            $('#editYoutube-' + '{{_id}}').click(function() {
            
                ViewYoutube('{{_id}}', '{{title}}', '{{content}}', '{{api}}', '{{date}}', '{{links}}', '{{isPrivate}}');

            });

            $('#deleteYoutube-' + '{{_id}}').click(function() {

               DeleteYoutube('{{_id}}', '{{title}}');

            });

    {{/each}}

    {{#each galeries}}

            $('#editGalerie-' + '{{_id}}').click(function() {
            
                ViewGalerie('{{_id}}', '{{title}}', '{{image}}', '{{isPrivate}}');

            });

            $('#deleteGalerie-' + '{{_id}}').click(function() {

               DeleteGalerie('{{_id}}', '{{title}}');

            });

    {{/each}}
    </script>

    â€‹{{> notifications}}

</body>

</html>