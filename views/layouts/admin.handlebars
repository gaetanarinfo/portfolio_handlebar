<!DOCTYPE html>
<html lang="fr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{{title}}</title>
    <meta name="description" content="{{content}}">

    <link rel="icon" type="image/png" href="/images/favicon.png" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin.css">

</head>

<body>

    {{> admin/display_admin }}

    {{> admin/menu_admin }}

    {{> admin/admin_mobile }}

    {{> admin/modal/modal_admin }}

    <!-- js icons -->
    <script src="/vendor/icons/9d1d83a1dd.js"></script>

    <!-- Bootstrap JS -->
    <script src="/vendor/jquery/jquery-3.5.1.slim.min.js"></script>
    <script src="/vendor/bootstrap/js/popper.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Js perso -->
    <script src="/admin/js/index.js"></script>
    <script src="/admin/js/edit.js"></script>

    <!-- Permet de voir le membre dans le modal -->
    <script>
    {{#each membres}}

            $('#editMembre-' + '{{_id}}').click(function() {
            
                ViewMembre('{{_id}}', '{{lastname}}', '{{firstname}}', '{{email}}', '{{isBanned}}', '{{isAdmin}}');

            });

            $('#deleteMembre-' + '{{_id}}').click(function() {

                DeleteMembre('{{_id}}', '{{lastname}}', '{{firstname}}');

            });

    {{/each}}
    </script>

    <script>
    
        if(document.location.href == 'http://localhost:3000/admin') {
            document.getElementById('membres').style.display = '';
        }else if(document.location.href == 'http://localhost:3000/admin/articles') {
            document.getElementById('blog').style.display = '';
            document.getElementById('membres').style.display = 'none';
            document.getElementById('galerie').style.display = 'none';
            document.getElementById('youtube').style.display = 'none';
            document.getElementById('projet').style.display = 'none';
        }else if(document.location.href == 'http://localhost:3000/admin/galeries') {
            document.getElementById('galerie').style.display = '';
        }else if(document.location.href == 'http://localhost:3000/admin/youtubes') {
            document.getElementById('youtube').style.display = '';
        }else if(document.location.href == 'http://localhost:3000/admin/projets') {
            document.getElementById('projet').style.display = '';
        }

    </script>

    â€‹{{> notifications}}

</body>

</html>