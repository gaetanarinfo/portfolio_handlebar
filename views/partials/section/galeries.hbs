<!-- Section 4 Galerie -->
<div class="w-100 mt-2 p-4" id="galerie">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <p class="title-h">Ma galerie d'image</p>
            <hr class="h-2 bg-light">
        </div>
    </div>
</div>

<div class="container">
    <div class="row" id="gallery">

        <!-- Boucle pour afficher les images de la galerie -->
        {{#each (limit galeries 12)}}
        <div class="col-lg-3 col-md-4 col-xs-6 thumb" style="{{#if isPrivate}}display: none;{{else}}{{/if}}">
            <a data-toggle="modal" data-target="#galerieModal_{{_id}}">
                <img src="{{image}}" class="img-thumb zoom img-fluid " alt="">
                <div class="thumb-title">{{title}}</div>
            </a>
        </div>

        <!-- Modal Galerie pour afficher chaque image -->
        <div class="modal fade" id="galerieModal_{{_id}}" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="ModalLabelLogout">{{title}}</h5>
                        <a class="btn btn-close" data-dismiss="modal" aria-label="Close" href="#"></a>
                    </div>
                    <div class="modal-body">
                        <img class="d-block w-100 img-item" src="{{image}}" alt="{{title}}">
                    </div>
                </div>
            </div>
        </div>

        {{/each}}
    </div>
</div>