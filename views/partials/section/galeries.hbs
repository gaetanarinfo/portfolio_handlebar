<div class="w-100 mt-2 p-4" id="galerie">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <p class="title-h">Ma galerie d'image</p>
                <hr class="h-2 bg-light">
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row" id="gallery" data-toggle="modal" data-target="#galerieModal">
            {{#each (limit galeries 4)}}
            <div class="col-lg-3 col-md-4 col-xs-6 thumb" style="{{#if isPrivate}}display: none;{{else}}{{/if}}">
                <a data-target="#carouselGaetan" data-slide-to="0">
                    <img src="{{image}}" class="img-thumb zoom img-fluid " alt="">
                    <div class="thumb-title">{{title}}</div>
                </a>
                
            </div>
            {{/each}}
        </div>
    </div>
    <!-- Section 4 -->