{{#if users}}
<!-- Modal User -->
<div class="modal fade" id="userModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ModalLabelLogout">Modifier mon profil</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>

            <style>
                .banner {}

                .banner>img {
                    width: 100%;
                }

                .banner_avat {
                    display: block;
                    position: absolute;
                    top: 76px;
                    left: 12px;
                }

                .banner_avat>img {
                    width: 96px;
                    box-shadow: 0 0 11px 1px #0e0d0dd1;
                    opacity: 0.8;
                }

                .banner_title {
                    display: block;
                    position: absolute;
                    top: 290px;
                    left: 12px;
                }

                .banner_title > p {
                    font-size: 25px;
                    font-weight: 500;
                    font-family: 'Arimo';
                    letter-spacing: 3px;
                    color: white;
                }
            </style>

            <div class="banner">
                <img src="images/banner_user.jpg" alt=" ">

                <div class="banner_avat">
                    <img src="{{user.avatar}}" alt="{{user.lastname}} {{user.firstname}}" class="rounded-circle">
                </div>

                <div class="banner_title">
                    <p>{{user.lastname}} {{user.firstname}}</p>
                </div>
            </div>

            <form method="POST" action="/user/edit" enctype="application/x-www-form-urlencoded">
                <div class="modal-body">
        
                       <div class="form-row text-center">
                            <div class="form-group col-md-5 d-inline-block">
                                <label class="text-dark mb-2">Prénom</label>
                                <input type="text" class="form-control mb-2" name="firstname" required="" placeholder="Prénom" value="{{user.firstname}}">
                            </div>
        
                            <div class="form-group col-md-5 d-inline-block">
                                <label class="text-dark mb-2">Nom</label>
                                <input type="text" class="form-control mb-2" name="lastname" required="" placeholder="Nom" value="{{user.lastname}}">
                            </div>
                        </div>
        
                        <div class="form-row text-center">
                            <div class="form-group col-md-5 d-inline-block">
                                <label class="text-dark mb-2">Adresse email</label>
                                <input type="email" class="form-control mb-2" name="email" required="" placeholder="Adresse email" value="{{user.email}}">
                            </div>
        
                            <div class="form-group col-md-5 d-inline-block">
                                <label class="text-dark mb-2">Avatar</label>
                                <input type="file" class="form-control mb-2" name="avatar" id="avatarEdit" onchange="updateAvatarEditDisplay()" accept=".png, .jpg, .jpeg, .gif">
                            </div>

                            <div class="previewEdit">
                                <p>Aucun fichier sélectionné pour le moment</p>
                            </div>


                        </div>
                    </div>    
                <div class="modal-footer">
                    <button type="button" class="btn btn-form-reset" data-dismiss="modal">Fermer</button>
                    <button type="submit" class="btn btn-form-send">Confirmer la modification</button>
                    <a href="/user/delete" class="btn btn-form-del">Supprimer mon compte</a>
                </div>      
            </form>
        </div>

    </div>
</div>
</div>
<!-- Modal User -->
{{/if}}