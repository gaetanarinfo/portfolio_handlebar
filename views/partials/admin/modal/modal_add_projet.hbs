<!-- Modal Admin Ajout Projet -->
 <div class="modal fade" id="add_projet" tabindex="-1" role="dialog" aria-hidden="true">
     <div class="modal-dialog modal-dialog-centered" role="document">
         <div class="modal-content">
             <div class="modal-header">
                 <h5 class="modal-title" id="ModalLabelAddProjet">Ajouter un projet réalisé</h5>
                 <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                 </button>
             </div>
             <form method="POST" action="/admin/addProjet" enctype="multipart/form-data">
                 <div class="modal-body">
                     <div class="form-group">
                         <label class="text-dark mb-2">Image du projet</label>
                         <input type="file" class="form-control mb-2" id="imageProjets" name="image"
                             placeholder="Image du projet" onchange="updateImageDisplay3()" accept=".png, .jpg, .jpeg, .gif" required>
                     </div>

                     <div class="preview3">
                            <p>Aucun fichier sélectionné pour le moment</p>
                        </div>

                     <div class="form-group">
                         <label class="text-dark mb-2">Titre du projet</label>
                         <input type="text" class="form-control mb-2" name="title"
                             placeholder="Titre du projet" required>
                     </div>

                     <div class="form-group">
                         <label class="text-dark mb-2">Date du projet</label>
                         <input type="text" class="form-control mb-2" name="date" placeholder="31/10/2005" placeholder="MM/DD/YYYY" required>
                     </div>

                     <div class="form-group">
                         <label class="text-dark mb-2">Description du projet</label>
                         <textarea rows="10" class="form-control mb-2" name="content"
                             placeholder="Description du projet" required></textarea>
                     </div>

                    <div class="form-group text-center">
                        <div class="switch_box box_1">
                            <label class="text-dark mb-2">Projet privé ?</label>
                            <div><input type="checkbox" class="switch_1" name="isPrivate" id="isPrivate3" value="false" ></div>
                            <label class="text-dark mb-2" id="lab_proj">En ligne</label>
                        </div>
                    </div>

                 </div>

                 <div class="modal-footer">
                     <button type="button" class="btn btn-form-reset" data-dismiss="modal">Fermer</button>
                     <button type="submit" class="btn btn-form-send">Valider</button>
                 </div>
             </form>
         </div>
     </div>
 </div>
 <!-- Modal Admin Ajout Projet -->