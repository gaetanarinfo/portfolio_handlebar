<!-- Modal Admin Modifier une vidéo  -->
 <div class="modal fade" id="modif_video_{{video._id}}" tabindex="-1" role="dialog" aria-hidden="true">
     <div class="modal-dialog modal-dialog-centered" role="document">
         <div class="modal-content">
             <div class="modal-header">
                 <h5 class="modal-title" id="ModalLabelEditVideo">Modifier une vidéo Youtube</h5>
                 <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                     <span aria-hidden="true">&times;</span>
                 </button>
             </div>
             <form id="editTutoForm" method="POST" action="/admin/editVideo/{{video._id}}">
                 <div class="modal-body">
                    <div class="form-group">
                         <label class="text-dark mb-2">Lien de la vidéo</label>
                         <input type="text" class="form-control mb-2" name="links"
                             placeholder="Lien de la vidéo" value="{{video.links}}">
                     </div>

                     <div class="form-group">
                         <label class="text-dark mb-2">Api de la vidéo</label>
                         <input type="text" class="form-control mb-2" name="api" value="{{video.api}}"
                             placeholder="Api de la vidéo">
                     </div>

                     <div class="form-group">
                         <label class="text-dark mb-2">Titre de la vidéo</label>
                         <input type="text" class="form-control mb-2" name="title"
                             placeholder="Titre de le vidéo" value="{{video.title}}">
                     </div>

                     <div class="form-group">
                         <label class="text-dark mb-2">Date de la vidéo</label>
                         <input type="text" class="form-control mb-2" name="date" placeholder="18 déc. 2015" value="{{generateDate video.dateCreate}}">
                     </div>

                     <div class="form-group">
                         <label class="text-dark mb-2">Description de la vidéo</label>
                         <textarea rows="10" class="form-control mb-2" name="content"
                             placeholder="Description de la vidéo">{{video.content}}</textarea>
                     </div>

                     <div class="form-group text-center">
                        <div class="switch_box box_1">
                            <label class="text-dark mb-2">Vidéo privé ?</label>
                            <div><input type="checkbox" class="switch_1" name="isPrivate" id="isPrivate6_{{video._id}}" value="false" ></div>
                            <label class="text-dark mb-2" id="lab_vid2_{{video._id}}">En ligne</label>
                        </div>
                    </div>

                 </div>

                 <div class="modal-footer">
                     <button type="button" class="btn btn-form-reset" data-dismiss="modal">Fermer</button>
                     <button type="submit" class="btn btn-form-send">Valider</button>
                 </div>
             </form>
         </div>
     </div>
 </div>
 <!-- Modal Admin Modifier une vidéo -->