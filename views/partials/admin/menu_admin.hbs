<!-- Bar pour le menu de scroll -->
<div class="container-menu-left fixed-top mCustomScrollbar" id="menu" data-mcs-theme="light-3">

    <!-- Bouton pour masquer le menu -->
    <div class="mask-menu">
        <a id="btn_menu" href="" title="Masquer le menu"><i class="fas fa-times"></i></a> 
    </div>

    <!-- Menu profil admin gauche -->
    <div class="card-profil">
        <div class="m-auto text-center">
            <img src="../../..{{userAdmin.avatar}}"
                alt="Gaëtan Seigneur" width="117" class="rounded-circle mt-4">
        </div>

        <div class="m-auto text-center mt-3">
            <p><i class="fas fa-user-cog ml-1" aria-hidden="true"></i>{{userAdmin.lastname}} {{userAdmin.firstname}}</p>
            <p><i class="fas fa-random ml-1" aria-hidden="true"></i>{{#if userAdmin.isAdmin}}Administrateur{{else}}Membre{{/if}}</p>
            <p><i class="fas fa-sign-out-alt ml-1" aria-hidden="true"></i>Inscrit le : {{generateDate userAdmin.createDate}}</p>
            <p><i class="fas fa-sign-out-alt ml-1" aria-hidden="true"></i>Connexion le : {{generateDate userAdmin.isLog}}</p>
            <p><i class="fas fa-map-marker-alt ml-1" aria-hidden="true"></i>Ip : {{userAdmin.ip}}</p>
            <hr>
        </div>

        <div class="m-auto text-center mt-3">
            <div class="title-profil">Menu de configuration</div>
        </div>

        <div class="m-auto mt-3 menu-profil">
            <ul class="list-unstyled text-center">
                <li class="pb-2"><a href="/admin"><i class="fas fa-users ml-2" aria-hidden="true"></i>Liste des
